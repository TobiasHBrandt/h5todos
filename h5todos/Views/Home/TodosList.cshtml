@{
}

<div>
    <form method="post">
        <div class="form-group">
            <label for="itemTitle">Title</label>
            <input type="text" class="form-control" id="itemTitle" name="itemTitle" placeholder="Titel" />
        </div>
        <div class="form-group">
            <label for="itemDescription">Beskrivelse</label>
            <input type="text" class="form-control" id="itemDescription" name="itemDescription" placeholder="Beskrivelse" />
        </div>
        <button type="submit" class="btn btn-primary">Opret todos-tingest</button>
        @ViewBag.Message

    </form>
</div>

@foreach (TodosItem todosItem in ViewBag.Todos)
{
    <h2>
        @Html.DisplayFor(m => todosItem.Title)
    </h2>
    <h3>
        @Html.DisplayFor(m => todosItem.Description)
    </h3>

    <a href="/Home/DeleteTodos/@todosItem.Id" onclick="return confirm('Er du sikker?')">Slet</a>
}
